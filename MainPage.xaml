<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChatGptAPI.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Entry x:Name="MessageEntry" Placeholder="Escribe algo..."/>
            <Button
                x:Name="CounterBtn"
                Text="Obtener respuesta" 
                Clicked="OnCounterClicked"
                HorizontalOptions="Fill" />
            <Label x:Name="ResponseText" FontSize="20"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
